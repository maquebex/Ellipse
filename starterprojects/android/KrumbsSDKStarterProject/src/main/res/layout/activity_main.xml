<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:id="@+id/parent_container"
    android:background="@drawable/bkg3">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/camera_container"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/button_container"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <android.support.design.widget.FloatingActionButton
            android:layout_width="105dp"
            android:layout_height="101dp"
            android:text="@string/kcapturebuttonLabel"
            android:id="@+id/kcapturebutton"
            android:src="@drawable/kcap_large"
            android:layout_gravity="center"
            android:contentDescription="kcapturebutton"
            android:background="@null"
            android:scaleType="fitXY" />

        <TextView
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:id="@+id/title"
            android:layout_gravity="center_horizontal|top"
            android:text="Ellipse"
            android:layout_marginTop="200px"
            android:typeface="monospace"
            android:textStyle="bold"
            android:textSize="22pt"
            android:textAlignment="center"
            android:textColor="#191817"
            android:gravity="center_horizontal" />

        <android.support.design.widget.FloatingActionButton
            android:layout_width="105dp"
            android:layout_height="101dp"
            android:id="@+id/recommend"
            android:layout_marginRight="0dp"
            android:layout_marginEnd="41dp"
            android:layout_marginBottom="120dp"
            android:src="@drawable/reco"
            android:layout_gravity="center_horizontal|bottom"
            android:background="@null"
            android:scaleType="fitXY"
            android:contentDescription="kcapturebutton"
            android:text="@string/kcapturebuttonLabel" />
    </FrameLayout>

</RelativeLayout>
